<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>City</th>
      <th>Province</th>
      <th>Country</th>
      <th>Occupation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <% if profile.picture.blank? %>
          <td><img src="<%= profile.picture %>" style="width: 75px; visibility: hidden"></td>
        <% else %>
          <td><img src="<%= profile.picture %>" style="width: 75px"></td>
        <% end %>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.date_of_birth %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.city %></td>
        <td><%= profile.province %></td>
        <td><%= profile.country %></td>
        <td><%= profile.occupation %></td>
        <td><%= profile.user.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

