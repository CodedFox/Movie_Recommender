<p id="notice"><%= notice %></p>

<div style="width: 1000px; margin: auto; position: center; border-top: 2px black solid; text-align: center">

<h1 style="border-bottom: 2px solid black; padding-bottom: 10px">Listing - Likes Topics</h1>

<%= link_to '- New Likes topic -', new_likes_topic_path %>

<table style="margin: auto; width: 700px; text-align: center">
  <thead>
    <tr>
      <th>Profile</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes_topics.each do |likes_topic| %>
      <tr>
        <td><%= likes_topic.profile.user.email %></td>
        <td><%= likes_topic.topic.genre_name %></td>
        <td><%= link_to 'Show', likes_topic %></td>
        <td><%= link_to 'Edit', edit_likes_topic_path(likes_topic) %></td>
        <td><%= link_to 'Destroy', likes_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
