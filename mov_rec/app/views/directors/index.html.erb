<p id="notice"><%= notice %></p>

<h1>Listing Directors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Place of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.first_name %></td>
        <td><%= director.last_name %></td>
        <td><%= director.place_of_birth %></td>
        <td><%= director.date_of_birth %></td>
        <td><%= director.gender %></td>
        <td><%= link_to 'Show', director %></td>

        <% @user_type = UserType.find_by type_name: 'Admin' %>
        <% if current_user.user_type_id == @user_type.id  %>
          <td><%= link_to 'Edit', edit_director_path(director) %></td>
          <td><%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.user_type_id == @user_type.id  %>
  <%= link_to 'New Director', new_director_path %>
<% end %>