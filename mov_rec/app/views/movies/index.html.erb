<p id="notice"><%= notice %></p>

<% @admin = UserType.find_by type_name: 'Admin' %>

<h1>Listing Movies</h1>

<% if current_user.user_type_id == @admin.id  %>
<%= link_to 'New Movie', new_movie_path %>
<% end %>
<br />

<% @movies.each do |movie| %>

<% if movie.poster.blank? %>
  <a href="/movies/<%= movie.id %>" style="width:200px; padding:10px"><%= movie.movie_name %></a>
<% else %>
  <a href="/movies/<%= movie.id %>">
    <img src="<%= movie.poster %>" style="width: 200px; padding:10px">
  </a>
<% end %>
<% end %>
