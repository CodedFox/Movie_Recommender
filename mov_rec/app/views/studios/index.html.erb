<p id="notice"><%= notice %></p>

<% @admin = UserType.find_by type_name: 'Admin' %>

<body style="text-align: center">

<h1 style="border-bottom: 2px solid black; padding-bottom: 10px">Listing Studios</h1>

<% if current_user.user_type_id == @admin.id  %>
  <%= link_to '- New Studio -', new_studio_path %>
<% end %>
<br>

    <% @studios.each do |studio| %>

      <div style="display: inline-block; padding: 5px">
         <a href="/studios/<%= studio.id %>">
           <img src="<%= studio.picture %>" style="width: 200px; padding:10px; padding-bottom: 0px">
         </a>
           <p style="padding: 5px"><a href="/studios/<%= studio.id %>">
             <%= studio.studio_name %>
           </p>
         </a>
      </div>
    <% end %>

</body>
