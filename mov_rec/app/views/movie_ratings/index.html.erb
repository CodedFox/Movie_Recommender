<p id="notice"><%= notice %></p>

<div style="width: 1300px; margin: auto; position: center; border-top: 2px black solid; text-align: center">

  <h1 style="border-bottom: 2px solid black; padding-bottom: 10px">Listing - Movie Ratings</h1>

  <%= link_to '- New Movie rating -', new_movie_rating_path %>

<table style="text-align: center; margin: auto">
  <thead>
    <tr>
      <th>Date watched</th>
      <th>User rating</th>
      <th>Review</th>
      <th>User</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_ratings.each do |movie_rating| %>
      <tr>
        <td><%= movie_rating.date_watched %></td>
        <td><%= movie_rating.user_rating %></td>
        <td id="td1"><%= movie_rating.review %></td>
        <td><%= movie_rating.profile.user.email %></td>
        <td><%= movie_rating.movie.movie_name %></td>
        <td><%= link_to 'Show', movie_rating %></td>
        <td><%= link_to 'Edit', edit_movie_rating_path(movie_rating) %></td>
        <td><%= link_to 'Destroy', movie_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
